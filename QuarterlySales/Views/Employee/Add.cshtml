@model Employee
@{
    ViewBag.Title = "Add Employee";
}

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

    <h2>Add Employee</h2>

    <form asp-action="Add" method="post">

        <div class="form-group row">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="FirstName" class="form-control" />
            </div>
            <div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="LastName" class="form-control" />
            </div>
            <div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DOB" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="DOB" class="form-control" />
            </div>
            <div>
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DOH" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="DOH" class="form-control" />
            </div>
            <div>
                <span asp-validation-for="DOH" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ManagerId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="ManagerId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Employees, "EmployeeId", "FullName"))">
                    <option value="0"></option>
                </select>
            </div>
            <div class="col">
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary">Add</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary">Cancel</a>
            </div>
        </div>
    </form>